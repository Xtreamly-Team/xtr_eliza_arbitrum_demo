// .vscode/launch.json
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
			"args": ["${workspaceFolder}/src/index.ts"],
			"cwd": "${workspaceFolder}",
			"protocol": "inspector",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"sourceMaps": true,
			"preLaunchTask": "tsc: build - tsconfig.json"
		}
	]
}
